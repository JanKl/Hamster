/*object-oriented program*/MeinHamster hamster;

void main() {
	hamster = new MeinHamster(0, 0, Hamster.OST, 0, Hamster.PINK);
	hamster.schreib("Akkuladung: " + hamster.akku.gibLadung());
	//geheAufUndAb();
	hamster.reinige();
}

void geheAufUndAb() {
	while (hamster.akku.hatLadung()) {
		if (!hamster.vornFrei()) {
			hamster.meinRechtsUm();
		} else {
			hamster.meinVor();
		}
	}
	
	hamster.schreib("Akku leer");
}